# ============================================
# PRODUCTION SERVER ENVIRONMENT - UAT
# ============================================
# Domain: https://uat.refex.group/

# Server Configuration
PORT=3002
NODE_ENV=production

# Database Configuration
# Update these with your production database credentials
# DB_USERNAME=your_prod_db_user
# DB_PASSWORD=your_prod_db_password
# DB_DATABASE=refex_db_production
# DB_HOST=your_db_host
# DB_PORT=3306

# JWT Configuration
# IMPORTANT: Generate a strong secret for production!
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_IN_PRODUCTION_MIN_32_CHARACTERS
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SMTP)
# Update with your production email settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-production-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Addresses
SMTP_FROM_EMAIL=noreply@refex.group
SMTP_FROM_NAME=Refex Group
CONTACT_FORM_EMAIL=info@refex.co.in

# CORS Configuration (Optional)
# CORS_ORIGIN=https://uat.refex.group
# ALLOWED_ORIGINS=https://uat.refex.group,https://www.refex.group
